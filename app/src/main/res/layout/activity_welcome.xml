<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vivek.snapshary.WelcomeActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myLat"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/status"
        android:layout_toEndOf="@+id/status" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myLon"
        android:layout_alignTop="@+id/myLat"
        android:layout_toRightOf="@+id/myLat"
        android:layout_toEndOf="@+id/myLat"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree"
        android:id="@+id/button2"
        android:onClick="agree"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oneLat"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/myLat"
        android:layout_alignLeft="@+id/myLat"
        android:layout_alignStart="@+id/myLat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oneLon"
        android:layout_alignTop="@+id/oneLat"
        android:layout_alignLeft="@+id/myLon"
        android:layout_alignStart="@+id/myLon" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twoLat"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/twoDist"
        android:layout_alignStart="@+id/twoDist" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twoLon"
        android:layout_alignTop="@+id/twoLat"
        android:layout_alignLeft="@+id/oneLon"
        android:layout_alignStart="@+id/oneLon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Location"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/myLat"
        android:layout_alignBottom="@+id/myLat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tent 1"
        android:id="@+id/textView3"
        android:layout_below="@+id/oneLat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tent 2"
        android:id="@+id/textView4"
        android:layout_above="@+id/status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="71dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oneDist"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/twoLat"
        android:layout_alignStart="@+id/twoLat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twoDist"
        android:layout_above="@+id/status"
        android:layout_toRightOf="@+id/status"
        android:layout_toEndOf="@+id/status" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:text="Moving"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

</RelativeLayout>
